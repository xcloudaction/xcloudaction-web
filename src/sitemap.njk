---
permalink: sitemap.xml
sitemapIgnore: true
layout: false
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{% for item in collections.all %}
{%- if item.data.sitemapIgnore !== true %}
  <url>
    <loc>{{ site.baseURL }}{{ item.url }}</loc>
 <lastmod>{{ helpers.currentDate() }}</lastmod>
    <changefreq>{{ item.data.sitemapChangefreq | default("daily") }}</changefreq>
    <priority>{{ item.data.sitemapPriority | default(0.8) }}</priority>
  </url>
{%- endif %}
{% endfor %}
</urlset>
